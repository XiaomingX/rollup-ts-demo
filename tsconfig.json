{
    "compilerOptions": {
      "target": "ES6",                          // 编译目标版本
      "module": "ESNext",                       // 模块系统
      "outDir": "dist",                         // 输出目录
      "rootDir": "src",                         // 源代码根目录
      "strict": true,                           // 开启严格模式
      "esModuleInterop": true,                  // 允许ES模块与CommonJS互操作
      "skipLibCheck": true,                     // 跳过库文件检查
      "forceConsistentCasingInFileNames": true  // 强制文件名大小写一致
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  